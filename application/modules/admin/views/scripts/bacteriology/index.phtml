<div id='ng-app' ng-app="ReportModule" ng-cloak="" style="">
    <div class="bacteriology col-xs-12 no-padding micro" ng-controller="samplesController">

        <div ng-controller="ReportController">
            <div class="">
                <ul class="nav nav-tabs" ng-init="clickedTab = 'samples'">
                    <li class='pull-left ' ng-class="{'active' : clickedTab == 'samples'}">
                        <a href="" ng-click="clickedTab = 'samples';samples.samplesActivePage('viewsamples');">Manage Samples</a>
                    </li>
                    <li class='pull-left ' ng-class="{'active' : clickedTab == 'Packaging'}">
                        <a href="" ng-click="clickedTab = 'Packaging';samples.samplesActivePage('viewPackaging');">Manage Panels</a>
                    </li>
                    <li class='pull-left ' ng-class="{'active' : clickedTab == 'shipments'}">
                        <a href="" ng-click="clickedTab = 'shipments';samples.samplesActivePage('viewshipments');">Manage Shipments</a>
                    </li>
                    <li class='pull-left ' ng-class="{'active' : clickedTab == 'rounds'}">
                        <a href="" ng-click="clickedTab = 'rounds';samples.samplesActivePage('viewrounds');">Config Rounds</a>
                    </li>
                </ul>
            </div>
            <div class="col-md-12 no-padding">
                <div class="dropdown btn-sm btn btn-success pull-right ">
                    <a class="dropdown-toggle" data-toggle="dropdown" style="color:white !important;"> Extras
                        <span class="caret"></span></a>
                    <ul class="dropdown-menu" style="text-align: left;">
                        <li><a href="#" ng-click="clickedTab = 'courier';samples.samplesActivePage('viewcouriers')">Couriers</a></li>

                        <li><a href="#" ng-click="clickedTab = 'Reagents';samples.samplesActivePage('viewReagents')">Reagents</a></li>

                        <li><a href="#" ng-click="samples.samplesActivePage('addGradingLevels')">Grades</a></li>
                        <li><a href="#" ng-click="samples.samplesActivePage('testTypes')">Test Types</a></li>
                    </ul>
                </div>
                <div class="btn btn-sm btn-primary pull-right "
                     ng-click="samples.samplesActivePage('add'+clickedTab)">
                    <i class="fa fa-plus"></i> Add {{clickedTab|capitalizeLetter}}
                </div>
            </div>

            <div class="col-md-12" ng-hide="samples.menuLength==2">
                <a href="#" class="pull-right btn btn-primary btn-sm"
                   ng-click="samples.toggleSamplesMenu()"><i class="fa fa-list"></i></a>
            </div>
            <div class="clearfix">&nbsp;</div>

            <ng-include src='samples.linksObject.currentTemplate' onload="samples.createNanobar(100)">

            </ng-include>
            <div ng-if="samples.showBarcode">
                <div ng-include="'../partialHTMLS/barcodePrinting.html'">

                </div>
            </div>
        </div>
    </div>
    <div class="clearfix">&nbsp;</div>